# Application
APP_NAME="English Active Recall API"
DEBUG=false
API_V1_PREFIX="/api/v1"

# Database - Neon PostgreSQL (use pooled connection string)
# Format: postgresql://user:password@ep-xxx-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@ep-example-pooler.us-east-1.aws.neon.tech/english_recall?sslmode=require

# JWT Secrets (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-min-32-chars-here
REFRESH_SECRET_KEY=different-secret-for-refresh-tokens

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
